<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121"

        android:orientation="vertical"
        tools:context="com.example.android.rugbycounter.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/team_a"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#424242">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"
                    android:shadowColor="#e3f2fd"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="200"
                    android:text="m0nkeyZ"
                    android:textAllCaps="true"
                    android:textColor="#f9a825"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/team_b"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#424242">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:paddingLeft="45dp"
                    android:shadowColor="#e3f2fd"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="200"
                    android:text="Sharks"
                    android:textAllCaps="true"
                    android:textColor="#f9a825"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#e0e0e0"></View>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/score_box_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_number_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:shadowColor="#fafafa"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="150"
                    android:text="0"
                    android:textColor="#d84315"
                    android:textSize="70sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/score_box_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_number_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="15dp"
                    android:shadowColor="#fafafa"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="150"
                    android:text="0"
                    android:textColor="#d84315"
                    android:textSize="70sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/try_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#399e9393"
                    android:elevation="6dp"
                    android:onClick="TryPlusFiveLeft"
                    android:text="Try 5"
                    android:textColor="#f9a825"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/conversion_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/try_5"
                    android:layout_margin="10dp"
                    android:background="#399e9393"
                    android:elevation="6dp"
                    android:onClick="ConversionPlusTwoLeft"
                    android:text="Conversion+2"
                    android:textColor="#f9a825"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/drop_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/conversion_2"
                    android:layout_margin="10dp"
                    android:background="#399e9393"
                    android:elevation="6dp"
                    android:onClick="DropGoalPlusThreeLeft"
                    android:text="+3"
                    android:textColor="#f9a825"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e0e0e0"></View>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/try_5_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#399e9393"
                    android:elevation="6dp"
                    android:onClick="TryPlusFiveRight"
                    android:text="Try 5"
                    android:textColor="#f9a825"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/conversion_2_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/try_5_right"
                    android:layout_margin="10dp"
                    android:background="#399e9393"
                    android:elevation="6dp"
                    android:onClick="ConversionPlusTwoRight"
                    android:text="Conversion+2"
                    android:textColor="#f9a825"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/drop_goal_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#399e9393"
                    android:elevation="6dp"
                    android:onClick="DropGoalPlusThreeRight"
                    android:text="+3"
                    android:textColor="#f9a825"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/conversion_2_right"
                    android:layout_margin="10dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:background="#399e9393"
                android:elevation="6dp"
                android:onClick="ResetToZero"
                android:text="Reset"
                android:textColor="#f9a825"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>